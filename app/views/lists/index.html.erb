<div class="hero-container">
  <h1 class="centered">Welcome to Film Library</h1>
</div>

<div class="page-body">

  <div class="home-container">
    <h2>My Lists</h2>

    <div class="list-cards-container">
      <% @lists.each do |list| %>
        <div class="list-card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.image.key, height: 300, crop: :fill %>')">
          <h3><%= link_to list.name, list_path(list), class: "film-link" %></h3>
        </div>
      <% end %>
    </div>

    <div class="button">
      <%= link_to "Create a new list", new_list_path, class: "btn btn-primary" %>
    </div>
  </div>

</div>
